<html lang="en">

<head>
	<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
	<style>
		@font-face {
			font-family: 'alexbrush';
			src: url('/public/fonts/alexbrush.ttf');
		}
		
		#background-image img {
			min-height: 100%;
			width: 100%;
			height: 100vh;
			position: fixed;
			top: 0;
			left: 0;
			z-index: -9999;
			opacity: 0.8
		}
		
		@media screen and (max-width: 1024px) {
			/* Specific to this particular image */
			#background-image img {
				left: 50%;
				margin-left: -512px;
				/* 50% */
			}
		}
		
		.logo img {
			z-index: 1;
			width: 70%;
			height: 15%;
			margin: 5vh 0px 5vh 0px;
			-webkit-transform: rotate(-5deg);
			-moz-transform: rotate(-5deg);
		}
		
		#content >:first-child {
			padding-top: 8vh
		}
		
		#main {
			position: relative;
		}
		
		ul.gallery li img {
			height: 25vh;
			width: 50vh;
		}
		
		ul.gallery {
			list-style: none;
			font-size: 40;
		}
		
		ul.gallery li {
			text-align: center;
		}
		
		ul.gallery li a {
			position: relative;
			float: left;
			padding: 3vh 3vh 0px 3vh;
			margin-top: 15px;
			-webkit-transform: rotate(-5deg);
			-moz-transform: rotate(-5deg);
            text-decoration: none
		}
		
		ul.gallery li a img {
			border: 10px red;
			box-shadow: 2px 2px 2px red;
		}
	</style>
</head>

<body>
	<header>
    <%- include('./partials/header') %>
	</header>
	<div id="main">
		<div id="content">
			<div class="container">
				<ul class="gallery">
					<li class="col-md-6">
						<a href="/mind/" target="_blank" class="pic-1">
                            <img src="/public/images/mind.png" />
                            <p>Mind</p>
                        </a>
					</li>

					<li class="col-md-6">
						<a class="pic-2">
                            <img src="/public/images/under-construction.png" />
                            <p>Coming Soon!</p>
                        </a>
					</li>
				</ul>
			</div>

			<div class="container">
				<ul class="gallery">
					<li class="col-md-6">
						<a class="pic-4">
                            <img src="/public/images/under-construction.png" />
                            <p>Coming Soon!</p>
                        </a>
					</li>

					<li class="col-md-6">
						<a class="pic-5">
                            <img src="/public/images/under-construction.png" />
                            <p>Coming Soon!</p>
                        </a>
					</li>

				</ul>
			</div>
		</div>
	</div>

	<footer>
		<script src="https://code.jquery.com/jquery-2.2.0.min.js" type="text/javascript"></script>
	</footer>

</body>

</html>